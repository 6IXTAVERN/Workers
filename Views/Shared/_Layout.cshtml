<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @*Заголовок страницы*@
    <title>@ViewData["Title"]</title>
    @*Иконка страницы*@
    <link rel="icon" href="/favicon.ico" />
    @*Подключение стилей*@
    <link rel="stylesheet" href="/lib/bootstrap5.3.0/content/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/site.css" asp-append-version="true" />
</head>

<body>
<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand mb-1" asp-controller="Home" asp-action="Index">
        <img src="~/content/w.svg" alt="" width="40" height="31" class="d-inline-block align-text-top">
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")" style="font-size: 27px" asp-controller="Home" asp-action="Index">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "About" ? "active" : "")" style="font-size: 27px" asp-controller="Home" asp-action="About">About</a>
          </li>
        </ul>
        <ul class="navbar-nav">
          <li class="nav-item">
            <partial name="_LoginPartial"/>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>


@RenderBody()
@*Интересная заметка об ошибке: если в пути не указать ~/ то toggle-collapsed будет работать только на странице Home*@
<script src="~/lib/bootstrap5.3.0/scripts/bootstrap.bundle.min.js"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
