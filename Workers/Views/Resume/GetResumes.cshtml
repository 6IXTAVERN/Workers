@using Microsoft.AspNetCore.Identity;
@using Workers.Domain.Models;
@model System.Collections.Generic.List<Workers.Domain.Models.Resume>

@{
    ViewData["Title"] = "Студенты";
}

<div class="students">
    @foreach (var resume in Model)
    {
        <div class="student">
            <div class="avatar-container">
                @if (resume.User.ProfilePicture != null)
                {
                    <img src="data:image/*;base64,@(Convert.ToBase64String(resume.User.ProfilePicture))" class="f-img w-100 a-img">
                }
                else
                {
                    <img src="/content/not_authorized.svg"/>                    
                }                
            </div>
            @resume.FirstName @resume.MiddleName @resume.LastName   
            
        </div>
    }
</div>