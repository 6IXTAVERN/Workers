@model Workers.Domain.ViewModels.Resume.CreateResumeViewModel

@{
    ViewData["Title"] = "Создание резюме";
}

<div class="container">
    <h1 class="text-center">Создание резюме</h1>
    
    <form asp-controller="Resume" asp-action="Manage" enctype="multipart/form-data">
        
        <div class="mb-3">
            <label asp-for="@Model.FirstName" class="col-form-label text-white-50"></label>
            <input type="text" class="form-control" asp-for="@Model.FirstName">
            <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.MiddleName" class="col-form-label text-white-50"></label>
            <input type="text" class="form-control" asp-for="@Model.MiddleName"></input>
            <span asp-validation-for="@Model.MiddleName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.LastName" class="col-form-label text-white-50"></label>
            <input type="text" class="form-control" asp-for="@Model.LastName"></input>
            <span asp-validation-for="@Model.LastName" class="text-danger"></span>
        </div>
        
        
        <div class="mb-3">
            <select asp-for="@Model.SelectedFaculty" class="col-form-label text-black-50">
                <option value="">Выберите факультет</option>
                @foreach (var faculty in @Model.Faculties!)
                {
                    <option value="@faculty">@faculty</option>
                }
            </select>
            <span asp-validation-for="@Model.SelectedFaculty" class="text-danger"></span>
        </div>
        
        <button type="submit" class="btn btn-primary">Создать резюме</button>
    </form>
    <div id="successModal" class="modal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Успешно!</h5>
                </div>
                <div class="modal-body">
                    <p>Резюме успешно создано и сохранено.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="okButton">OK</button>
                </div>
            </div>
        </div>
    </div>
</div>