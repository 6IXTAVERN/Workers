@model Workers.Domain.ViewModels.Resume.CreateResumeViewModel

@{
    ViewData["Title"] = "Создание резюме";
}

<div class="container">
    <h1 class="text-center">Resume Builder</h1>
    <form asp-controller="Resume" asp-action="Create" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="@Model.FirstName" class="col-form-label text-black-50"></label>
            <input type="text" class="form-control" asp-for="@Model.FirstName">
            <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.MiddleName" class="col-form-label text-black-50"></label>
            <input type="text" class="form-control" asp-for="@Model.MiddleName"></input>
            <span asp-validation-for="@Model.MiddleName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.LastName" class="col-form-label text-black-50"></label>
            <input type="text" class="form-control" asp-for="@Model.LastName"></input>
            <span asp-validation-for="@Model.LastName" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Create Resume</button>
    </form>
    <div id="successModal" class="modal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Успешно!</h5>
                </div>
                <div class="modal-body">
                    <p>Резюме успешно создано и сохранено.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="okButton">OK</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Скрипт для открытия модального окна -->
<script>
    window.addEventListener('DOMContentLoaded', function () {
        // Отображаем модальное окно при загрузке страницы, если TempData содержит сообщение
        var message = '@TempData["Message"]';
        if (message !== '') {
            var successModal = document.getElementById('successModal');
            var modal = new bootstrap.Modal(successModal);
            modal.show();
        }
        
        $('#successModal').on('hide.bs.modal', function() {
                    window.location.href = '/';
                });
    });
    
    $('#successModal').on('hide.bs.modal', function() {
            window.location.href = '/';
        });
</script>